{
    "name": "management-system-backend",
    "version": "1.0.0",
    "description": "Sistema de gestiÃ³n con Express, TypeScript, PostgreSQL y WhatsApp",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon --exec ts-node src/server.ts",
        "dev:watch": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "test": "jest --detectOpenHandles",
        "test:coverage": "jest --detectOpenHandles --coverage",
        "test:watch": "jest --watch",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:restart": "docker-compose restart",
        "db:migrate": "ts-node scripts/migrate.ts",
        "db:seed": "ts-node scripts/seed.ts",
        "db:reset": "npm run db:migrate && npm run db:seed"
    },
    "author": "eliriper123@gmail.com",
    "license": "ISC",
    "keywords": [
        "express",
        "typescript",
        "postgresql",
        "whatsapp",
        "api",
        "rest",
        "management-system"
    ],
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.1.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.2"
    },
    "dependencies": {
        "@types/compression": "^1.8.1",
        "@types/helmet": "^0.0.48",
